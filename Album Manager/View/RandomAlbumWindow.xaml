<Window x:Class="Album_Manager.View.RandomAlbumWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Album_Manager.View"
        xmlns:viewmodel="clr-namespace:Album_Manager.ViewModel"
        mc:Ignorable="d"
        Title="RandomAlbumWindow" Height="600" Width="600">

    <Window.Resources>
        <viewmodel:AlbumViewModel x:Key="albumViewModel"/>    
    </Window.Resources>

    <Grid DataContext="{StaticResource ResourceKey=albumViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="9*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Center">
            <Image Source="{Binding CurrentAlbumImageUrl}" Width="300" Height="300"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentAlbumTitle}" FontSize="30"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentAlbumArtist}" FontSize="20"/>
            <TextBlock HorizontalAlignment="Center" Text="{Binding CurrentAlbumYear}" FontSize="20" FontWeight="Light"/>
        </StackPanel>
        <Button x:Name="anotherAlbumButton" Content="Another random album" Grid.Row="1" Click="anotherAlbumButton_Click"/>
    </Grid>
</Window>
